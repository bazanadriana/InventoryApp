{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Inventory App backend",
  "type": "commonjs",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.10"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "build": "npm run prisma:generate && tsc -p tsconfig.json",
    "start": "npm run migrate:deploy && node dist/server.js",
    "start:prod": "npm run migrate:deploy && node dist/server.js",
    "start:nomigrate": "node dist/server.js",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma || echo \"skip prisma\"",
    "db:seed": "prisma db seed --schema=./prisma/schema.prisma",
    "print:schema": "echo '--- prisma/schema.prisma ---' && sed -n '1,80p' prisma/schema.prisma"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsforce": "^3.10.7",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "prisma": "6.15.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-oauth2": "^1.8.0",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2"
  }
}
